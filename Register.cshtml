@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">@ViewData["Title"]</h2>
    <form method="post" action="/Account/Register" class="mt-4 mx-auto" style="max-width: 400px;">
        <div class="mb-3">
            <label for="username" class="form-label">Username:</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>

        <legend>Do you own a pet?</legend>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
            <label class="form-check-label" for="optionsRadios1">Yes</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
            <label class="form-check-label" for="optionsRadios2">No</label>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-success btn-block">Register</button>
        </div>
    </form>

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">
            @ViewData["Error"]
        </div>
    }

    <p class="text-center mt-3">
        Already have an account?
        <a href="/Account/Login" class="text-secondary">Login here</a>
    </p>
</div>
